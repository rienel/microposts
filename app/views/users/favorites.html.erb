<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <ul>
        <li>
          <%= link_to favorites_user_path(@user) do %>
            お気に入り<br /><%= @favorite_num %>
          <% end %>
        </li>
      </ul>
    </section>
  </aside>

  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">

        <% @microposts.each do |micropost| %>
          <li id="micropost-<%= micropost.id %>">
            <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
            <span class="user"><%= link_to micropost.user.name, micropost.user %></span>

            <%= link_to favorite_path(micropost), method: :delete do %>
              <span class="glyphicon glyphicon-star icon-star-off"></span>
            <% end %>

            <span class="content"><%= micropost.micropost.content %></span>
            <span class="timestamp">
              <%= time_ago_in_words(micropost.created_at) %>前
              <% if current_user == micropost.user %>
                <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
              <% end %>
            </span>
          </li>
        <% end %>

      </ol>
    <% end %>
  </div>
</div>