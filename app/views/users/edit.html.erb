<h1>プロフィールの編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :profile %>
      <%= f.text_area :profile %>

      <%= f.label :pref_id %>
      <%= f.collection_select :pref_id, Prefectural.all, :id, :name %>

      <%= f.submit "Change my profile", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>