<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <ul>
        <li>
          <%= link_to favorites_user_path(@user) do %>
            お気に入り<br /><%= @favorite_num %>
          <% end %>
        </li>
      </ul>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <%= page_entries_info @microposts %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= paginate(@microposts) %>
    <% end %>
  </div>
</div>